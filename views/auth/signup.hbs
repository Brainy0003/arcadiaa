<div class="row">
  <form class="col-sm-6 col-sm-offset-3 sign-form" action="/auth/signup" method="post">
    <h2>Inscription</h2>

    {{#if hasErrors}}
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{#each messages}}
          <p class="text-center">
            {{this}}
          </p>
        {{/each}}
      </div>
    {{/if}}
    <hr>

    <div class="form-group">
      <label for="username">Pseudo</label>
      <input type="text" class="form-control" id="username" name="username">
    </div>
    <div class="form-group">
      <label for="password">Mot de passe</label>
      <input type="password" class="form-control" id="password" name="password">
    </div>
    <div class="form-group">
      <label for="password2">Confirmez votre mot de passe</label>
      <input type="password" class="form-control" id="password2" name="password2">
    </div>
    <button type="submit" class="btn btn-block btn-primary">Valider</button>
    <hr>
    <div>
      <!-- Nest <a> tag into <p> to center it-->
      <p class="text-center"><a href="/auth/signin">Vous avez déjà un compte? Cliquez ici!</a></p>
    </div>
  </form>
  <div class="col-sm-6 col-sm-offset-3">
    <p class="or text-center">OU</p>
    <a href="/auth/google" class="btn btn-block btn-google"><i class="fa fa-google"></i> Se connecter avec Google</a>
  </div>
</div>
