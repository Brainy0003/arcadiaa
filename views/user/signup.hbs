<form class="col-md-6 col-md-offset-3" action="/user/signup" method="post">
  <h2>Inscription</h2>

  {{#if hasErrors}}
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      {{#each messages}}
        <p class="text-center">
          {{this}}
        </p>
      {{/each}}
    </div>
  {{/if}}
  <hr>

  <div class="form-group">
    <label for="username">Pseudo</label>
    <input type="text" class="form-control" id="username" name="username">
  </div>
  <div class="form-group">
    <label for="password">Mot de passe</label>
    <input type="password" class="form-control" id="password" name="password">
  </div>
  <div class="form-group">
    <label for="password2">Confirmez votre mot de passe</label>
    <input type="password" class="form-control" id="password2" name="password2">
  </div>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <button type="submit" class="btn btn-primary">Valider</button>
    </div>
    <div class="btn-group">
      <a href="/user/auth/github/" class="btn btn-default disabled"><i class="fa fa-google"></i> Se connecter avec Google</a>
    </div>
  </div>
  <hr>
  <div>
    <!-- Nest <a> tag into <p> to center it-->
    <p class="text-center"><a href="/user/signin">Vous avez déjà un compte? Cliquez ici!</a></p>
  </div>
</form>
