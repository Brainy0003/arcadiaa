<form class="col-sm-6 col-sm-offset-3 sign-form" action="/user/signin" method="post">
  <h2>Connexion</h2>

  <!-- POSSIBLE ERRORS -->
  {{#if hasErrors}}
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      {{#each messages}}
        <p class="text-center">
          {{this}}
        </p>
      {{/each}}
    </div>
  {{/if}}
  <hr>

  <div class="form-group">
    <label for="usernmame">Pseudo</label>
    <input type="text" class="form-control" id="username" name="username">
  </div>
  <div class="form-group">
    <label for="password">Mot de passe</label>
    <input type="password" class="form-control" id="password" name="password">
  </div>
  <button type="submit" class="btn btn-block btn-primary">Valider</button>
  <a href="#" class="btn btn-block btn-default disabled"><i class="fa fa-google"></i> Se connecter avec Google</a>
  <div>
    <hr>
    <!-- Nest <a> tag into <p> to center it-->
    <p class="text-center"><a href="/user/signup">Pas de compte? Cliquez ici!</a></p>
  </div>
</form>
